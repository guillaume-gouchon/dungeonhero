<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_hero_details"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gui"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <com.glevel.dungeonhero.views.CustomTextView
            android:id="@+id/new_level_title"
            style="@style/PopupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="24sp" />

        <com.glevel.dungeonhero.views.CustomTextView
            android:id="@+id/choose_skills_message"
            style="@style/PopupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="@string/new_level_text"
            android:textSize="16sp" />


        <android.support.v7.widget.GridLayout
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            custom:columnCount="4">

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />

            <include layout="@layout/in_game_item" />
        </android.support.v7.widget.GridLayout>

        <com.glevel.dungeonhero.views.CustomTextView
            android:id="@+id/points_left"
            style="@style/PopupMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>