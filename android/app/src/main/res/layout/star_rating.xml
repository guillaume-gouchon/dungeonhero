<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/star1"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/star_rating_size"
        android:layout_height="@dimen/star_rating_size"
        android:padding="@dimen/star_rating_padding" />

    <ImageView
        android:id="@+id/star2"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/star_rating_size"
        android:layout_height="@dimen/star_rating_size"
        android:padding="@dimen/star_rating_padding" />

    <ImageView
        android:id="@+id/star3"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/star_rating_size"
        android:layout_height="@dimen/star_rating_size"
        android:padding="@dimen/star_rating_padding" />
</LinearLayout>