<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent ON API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml ON newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- SPLASHSCREEN -->
    <style name="SplashScreenTitle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#ddd</item>
    </style>

    <!-- HOME SCREEN -->
    <style name="Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@drawable/text_color_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="HomeScreenButton" parent="@style/Button">
        <item name="android:width">235dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SmallHomeScreenButton" parent="@style/Button">
        <item name="android:width">85dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BackButton" parent="@style/Button">
        <item name="android:width">100dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- SETTINGS -->
    <style name="SettingsButton" parent="@style/Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_radio_btn</item>
        <item name="android:textColor">@drawable/text_color_radio_btn</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SettingsLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- ABOUT -->
    <style name="AboutDialogText" parent="@style/SettingsLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHighlight">@color/link_pressed</item>
        <item name="android:textColorLink">@color/link</item>
    </style>

    <!-- DIALOGS -->
    <style name="FullScreenDialog" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="@android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="@android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogNoAnimation" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="@android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AlertDialogButton">
        <item name="android:background">@drawable/bg_alert_dialog_btn</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- NEW GAME-->
    <style name="AnimatedMessage">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HeroTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="HeroDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="HeroStat">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="BookTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="BookSummary">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <!-- STORY -->
    <style name="StoryText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="GameOverTitle">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">50sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- IN GAME -->
    <style name="LoadingTitle">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">38sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="DiscussionName">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="DiscussionMessage">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="PopupMessage">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="PopupDescription">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="PopupButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_color_btn</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_popup_btn</item>
    </style>

    <style name="Reply">
        <item name="android:textColor">@drawable/text_color_discussion_answer</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>